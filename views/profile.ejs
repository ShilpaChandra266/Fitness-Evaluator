                <div class="row" style="padding-top: 140px;padding-left: 110px">
                            <div style="width: 30%; height: 250px; float:left; background-color: #5F9EA0">
                              <span class="img-wrapper pull-left m-r-15"><img src="img/avatar-2.jpg" alt="" style="width:164px" class="br-radius"></span>
                              <div>
                                <h3 class="text-white mb-2 m-t-10 ellipsis">Romin Oushana</h3>
                                <h5 class="text-white">San Jose</h5>
                              </div>
                            </div>
                    <div  style="width: 65%; height:600px; float:right">
                                    <b><h3><l class="active"><a data-toggle="tab" href="#aboutme" style="color: black">About Me</a></l></h3></b>
                                </ul>

                                <div class="tab-content m-0"> 

                                    <div id="aboutme" class="tab-pane active">
                                    <div class="profile-desk">
                                        <p style="color: grey">
                                            I am a software engineer who is constantly active and want to monitor my health.
                                            {{testa}}
                                        </p>
                                        <form editable-form name="profileForm" onaftersave="updateProfile($data)">
                                        <table class="table table-condensed" style="color: grey">
                                            <thead>
                                            <tr>
                                                <th colspan="3" style="color: black"><h3>User Information</h3></th>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            <tr>
                                            <div>
                                                <!-- editable username (text with validation) -->
                                                <td><span class="title">Email: </span></td>
                                                <td><span editable-text="profile.email" e-name="email">{{ profile.email}}</span></td>
                                            </div>
                                            </tr>

                                            <tr>
                                            <div>
                                                <!-- editable status (select-local) -->
                                                <td> <span class="title">Phone Number: </span></td>
                                                <td><span editable-text="profile.phonenumber" e-name="phoneNumber">{{ profile.phonenumber}}</span></td>
                                            </div>
                                            </tr>

                                            <tr>
                                            <div>
                                                <!-- editable group (select-remote) -->
                                                <td> <span class="title">Height: </span></td>
                                                <td> <span editable-text="profile.height" e-name="height">{{ profile.height}}</span></td>
                                            </div>
                                            </tr>

                                            <tr>
                                            <div>
                                                <!-- editable group (select-remote) -->
                                                <td><span class="title">Weight: </span></td>
                                                <td> <span editable-text="profile.weight" e-name="weight">{{ profile.weight}}</span></td>
                                            </div>
                                            </tr>

                                            <tr>
                                            <div>
                                                <!-- editable group (select-remote) -->
                                                <td><span class="title">Gender: </span></td>
                                                <td><span editable-select="gender.text" e-name="gender" e-ng-options="gender.text for gender in genders"> {{profile.gender}}</span></td>
                                            </div>
                                            </tr>
                                            </tbody>
                                        </table>
                                            <div>
                                                <!-- button to show form -->
                                                <button type="button" class="btn btn-default"
                                                        ng-click="profileForm.$show()"
                                                        ng-show="!profileForm.$visible">
                                                    Edit
                                                </button>
                                                <!-- buttons to submit / cancel form -->
                                                <span ng-show="profileForm.$visible">
                                            <button type="submit" class="btn btn-primary" ng-disabled="profileForm.$waiting">
                                              Save
                                            </button>
                                            <button type="button" class="btn btn-default" ng-disabled="profileForm.$waiting"
                                                    ng-click="profileForm.$cancel()">
                                              Cancel
                                            </button>
                                            </span>
                                            </div>
                                        </form>

                                    </div> <!-- end profile-desk -->
