            <!-- Page Content Start -->
            <!-- ================== -->

            <div class="wraper container-fluid" style="color: grey">
                <div class="page-title">
                    <h2 class="title">Emergency Contacts </h2>
                </div>

                <div class="row">
                    <div class="col-sm-6" ng-repeat="contact in contacts">
                        <form editable-form name="editableForm" onaftersave="updateContact($data,contact.emergency_Id)">
                        <div class="panel">
                            <div class="panel-body p-t-10">
                                <div class="media-main">
                                    <a class="pull-left" href="#">
                                        <img class="thumb-lg img-circle bx-s" src="img/avatar-2.jpg" alt="">
                                    </a>
                                    <div class="pull-right btn-group-sm">
                                        <button type="button" class="btn btn-default" ng-click="editableForm.$show()" ng-show="!editableForm.$visible">
                                            Edit
                                        </button>

                                        <button type="button" class="btn btn-danger" ng-click="deleteContact(contact)" ng-show="!editableForm.$visible">
                                            Delete
                                        </button>
                                        <span ng-show="editableForm.$visible">
                                        <button type="submit" class="btn btn-primary" ng-disabled="editableForm.$waiting" ng-click="updateContact(contact.emergency_Id)">
                                            Save
                                        </button>
                                        <button type="button" class="btn btn-default" ng-disabled="editableForm.$waiting" ng-click="editableForm.$cancel()">
                                            Cancel
                                        </button>
                                        </span>
                                    </div>
                                    <div class="info">
                                        <h4 editable-text="contact.name" ng-model="name" e-name="name">{{contact.name}}</h4>
                                        <p class="text-muted" editable-text="contact.relation" e-name="relation">{{contact.relation}}</p>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <hr/>
                                <ul class="social-links list-inline p-b-10">
                                    <h2 editable-text="contact.phonenumber" e-name="phoneNumber">{{contact.phonenumber}}</h2>
                                </ul>
                            </div> <!-- panel-body -->
                        </div> <!-- panel -->
                        </form>
                    </div> <!-- end col -->
                    <form editable-form name="editableForm2" onaftersave="updateContact($data,contact.emergency_Id)">


                    <div class="col-sm-6" ng-if="contact.name && contact.phonenumber && contact.relation">
                        <div class="panel">
                            <div class="panel-body p-t-10">
                                <div class="media-main">
                                    <a class="pull-left" href="#">
                                        <img class="thumb-lg img-circle bx-s" src="img/avatar-2.jpg" alt="">
                                    </a>
                                    <div class="pull-right btn-group-sm">
                                        <button type="button" class="btn btn-default" ng-click="editableForm2.$show()" ng-show="!editableForm2.$visible">
                                            Edit
                                        </button>
                                        <button type="button" class="btn btn-danger" ng-click="deleteContact(contact.emergency_Id)" ng-show="!editableForm2.$visible">
                                            Delete
                                        </button>
                                        <span ng-show="editableForm.$visible">
                                        <button type="submit" class="btn btn-primary" ng-click="updateContact(contact.emergency_Id)" ng-disabled="editableForm2.$waiting">
                                            Save
                                        </button>
                                        <button type="button" class="btn btn-default" ng-click="editableForm2.$cancel()" ng-disabled="editableForm2.$waiting">
                                            Cancel
                                        </button>
                                        </span>
                                    </div>
                                    <div class="info">
                                        <h4 editable-text="contact.name" e-name="name">{{contact.name}}</h4>
                                        <p class="text-muted" editable-text="contact.relation" e-name="relation">{{contact.relation}}</p>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <hr/>
                                <ul class="social-links list-inline p-b-10">
                                    <h2 editable-text="contact.phonenumber" e-name="phoneNumber">{{contact.phonenumber}}</h2>
                                </ul>
                            </div> <!-- panel-body -->
                        </div> <!-- panel -->
                    </div> <!-- end co -->
                </form>
            </div> <!-- END Wraper -->


            <!--Add contacts form starts here-->

            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-default">
                        <h3>Add New Contacts</h3>
                        <div class="panel-body">
                            <form class="form-horizontal" name="addContactForm" id="addContact" ng-submit="addContact()" method="post">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Name</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="name" id="name" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Relation</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="relation" id="relation" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Phone Number</label>
                                    <div class="col-md-10">
                                        <input type="text" ng-model="phoneNumber" id="phoneNumber" class="form-control">
                                    </div>
                                </div>
